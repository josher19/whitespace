- firstName = 'Timothy'; lastName = 'Jones'; preferredName = 'Tim'
!!! 5
html
  head
    title Whitespace
    link(rel: 'stylesheet', href: 'css/whiteboard.css')
    link(rel: 'shortcut icon', type: 'image/png', href: 'images/favicon.png')
    script(src: 'js/jquery.min.js')
    script(src: '/socket.io/socket.io.js')
    script(src: 'jscolor/jscolor.js')
    script(src: 'js/whiteboard.js')
  body
    section#left-bar.bar
      #profile.section
        img#avatar(src: 'images/avatar.jpg')
        #name= (preferredName || firstName) + ' ' + lastName 
      #online.section
        .title Notices
        ul
          li
            a(href: '#').notice Next lesson time has changed again.
            time 17 / 9 / 2010
          li
            a(href: '#').notice Next lesson time has changed.
            time 16 / 9 / 2010
          li
            a(href: '#').notice Construction project outside classroom.
            time 12 / 9 / 2010
      nav#nav
        a.active(data-section: 'whiteboard', href: '#whiteboard')
          .long-cat
          span.vert-align Whiteboard
        a(data-section: 'lessons', href: '#lessons')
          .long-cat
          span.vert-align Lessons
        a(data-section: 'admin', href: '#admin')
          .long-cat
          span.vert-align Admin
    section#center
      .whiteboard
        header
          a(data-slide: 'prev')= '<<'
          a(data-slide: 'next')= '>>'
          #whiteboard-header First Header
        #whiteboard-container
          canvas#whiteboard(width: '800px', height: '600px')
          #whiteboard-input-container
            textarea#text-input(rows: 1, cols: 1)
        footer
          #toolbar
            - for (i in icons = 'pencil marker text eraser fill'.split(' '))
              img(src: 'images/icons/' + icons[i] + '.png', width: '20px', height: '20px', class: i == 0 ? 'active' : '', data-type: icons[i])
            input.color(value: '000')
          #extras
            #marker-size(data-icon: 'marker')
              label Draw size:
              input(type: 'number', value: 5)
            #font-size(data-icon: 'text')
              label Font size: 
              input(type: 'number', value: 12)
            #eraser-size(data-icon: 'eraser')
              label Draw size:
              input(type: 'number', value: 5)
      .lessons
        - courses = { Mathematics: { Algebra: 3, 'Algebra II': 2, Geometry: 3 }, English: { Hamlet: 3, 'King Lear': 2, Othello: 2, 'The Tempest': 2 } }
        ul#courses.fancy-list
          - for (course in courses)
            li
              .fancy-title= course
                a.add-lesson New Lesson
              ul.course
                - for (lesson in course = courses[course])
                  li
                    .lesson-title= lesson
                    ul.lesson(data-section: 'whiteboard')
                      - for (i = 0; i < course[lesson]; ++i)
                        li.slide
                          .slide-top
                          - if (lesson === 'Hamlet')
                            canvas(width: '800px', height: '600px', data-slide: i)
                          - else if (i === 0)
                            img(src: 'images/slides/' + lesson + '.png')
      .admin
        ul.fancy-list
          li
            .fancy-title Profile
            ul.input-list
              li
                label First Name:
                input#edit-first-name(value: firstName)
              li
                label Last Name:
                input#edit-last-name(value: lastName)
              li
                label Preferred Name:
                input#edit-preferred-name(value: preferredName)
              li
                label Avatar:
                input(type: 'file')
          li
            .fancy-title English
            #students.input-list
              a Add Participant
              label Participants
              select(size: '2')
                option(value: 0, selected) Bisley, Matthew
                option(value: 1) McMillan, Carl
                option(value: 2) Robinson, Thomas
            ul#student-properties.input-list
              li Permissions
                ul#permissions.input-list
                  li
                    input(type: 'checkbox', data-permission: 'chat', checked)
                    label Chat
                  li
                    input(type: 'checkbox', data-permission: 'drawing', checked)
                    label Drawing
                  li
                    input(type: 'checkbox', data-permission: 'eraser', checked)
                    label Eraser
                  li
                    input(type: 'checkbox', data-permission: 'image')
                    label Image
                  li
                    input(type: 'checkbox', data-permission: 'background')
                    label Background
                  li
                    input(type: 'checkbox', data-permission: 'clear')
                    label Clear
    section#right-bar.bar
      .whiteboard
        #lesson.section
          .title
            | Lesson
            a#add-slide New Slide
          ol
            li.active(data-slide: 0) First Header
            li(data-slide: 1) Second Header
            li(data-slide: 2) Third Header
        #announcements.section
          .title Announcements
          ul
            li.empty No announcements
          input
        #chat.section
          .title Chat
          ul
            li.empty No one online
        #templates.section
          .title Templates
          ul
            li.empty No templates found
      .lessons
        #upcoming-lessons.section
          .title Upcoming
          ul
            li
              a(href: '#whiteboard', data-section: 'whiteboard') Algebra II
              time 10:00 AM, 20 / 9 / 2010
            li
              a(href: '#whiteboard', data-section: 'whiteboard') Hamlet
              time 12:00 AM, 20 / 9 / 2010
            li
              a(href: '#whiteboard', data-section: 'whiteboard') Geometry
              time 10:00 AM, 21 / 9 / 2010
        #course-list.section
          .title
            | Courses
            a New Course
          ul
            li
              a(href: '#').course-li Mathematics
              .lesson-count 3 Lessons, 8 Slides
            li
              a(href: '#').course-li English
              .lesson-count 4 Lessons, 9 Slides
      .admin
